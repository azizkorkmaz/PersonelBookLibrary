@model PersonalBookLibrary.MvcUI.Models.ComplexType.BookCategoryViewModel

@{
    ViewBag.Title = "GetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<head>
    <style>
        .btn {
            border-radius: 5px 5px;
        }

        .label {
            font-size: 14px;
        }
    </style>
</head>

<html lang="en">
<body>

    <!-- Content -->
    <div id="content">

        <div class="container-fluid">

            <div class="row">
                <!-- Responsive table -->
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <header class="panel-heading">Kitap Listesi</header>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table footable table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sıra</th>
                                            <th data-toggle="true">Adı</th>
                                            <th>Kategori</th>
                                            <th>Durumu</th>
                                            <th>Ekleyen Kullanıcı</th>
                                            <th>Güncelle</th>
                                            <th>Detay</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var bookDetail in Model.BookDetailList)
                                        {
                                            foreach (var book in bookDetail)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>
                                                        @book.BookName
                                                    </td>
                                                    <td>
                                                        @book.CategoryName
                                                    </td>

                                                    @if (book.Status)
                                                    {
                                                        <td><span class="label label-success">Aktif</span></td>
                                                    }
                                                    else
                                                    {
                                                        <td><span class="label label-danger">Pasif</span></td>
                                                    }

                                                    <td>@book.InsertUser</td>
                                                    <td><a href="@Url.Action("Update","Book",new {book=Model.BookDetailList.ToList(), id=book.BookID})" class="btn btn-success" type="button">Güncelle</a></td>
                                                    <td><a href="@Url.Action("Detail","Book",new {book = Model.BookDetailList.ToList(), id=book.BookID})" class="btn btn-info" type="button">Detay</a></td>
                                                    <td><a href="@Url.Action("Delete","Book",new {book = Model.BookDetailList.ToList(), id=book.BookID})" class="btn btn-danger" type="button">Sil</a></td>
                                                </tr>
                                            }

                                            i++;
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Responsive table -->
            </div>

        </div>
    </div>
    <!-- /Content -->

</body>
</html>
